APP_NAME=SGDEA
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=America/Bogota

LOG_CHANNEL=stack
LOG_LEVEL=notice

# IMPORTANTE: Las credenciales de base de datos serán configuradas en el wizard (/setup)
# No es necesario completarlas aquí en instalación fresca
# Si ya tienes una BD existente, completa estos valores:

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sgdea_system
DB_USERNAME=root
DB_PASSWORD=

# Redis (opcional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (opcional)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="admin@sgdea.local"
MAIL_FROM_NAME="${APP_NAME}"

# Otras configuraciones
FILESYSTEM_DISK=local

